<input data-attr="id" type="hidden" value="{{id}}" name="release[release_changes_attributes][{{index}}][id]">

<input data-attr="_destroy" type="hidden" value="{{#if destroyed}}1{{else}}0{{/if}}" attr="release[release_changes_attributes][{{index}}][_destroy]" name="release[release_changes_attributes][{{index}}][_destroy]">

<div class="change-tag span3">
  <select name="release[release_changes_attributes][{{index}}][tag_slug]">
    {{#each options.tags}}
      <option {{#ifEql slug ../tagSlug}}selected{{/ifEql}} value="{{slug}}">{{name}}</option>
    {{/each}}
  </select>
</div>

<div class="change-description span8">
  <input maxlength="255" size="255" type="text" value="{{description}}" name="release[release_changes_attributes][{{index}}][description]">
</div>

<span class="delete-nested"><a class="delete-link delete-button delete-nested-link" href="#" title="Delete">Delete</a></span>
<span class="add-nested"><a class="add-link add-nested-link" href="#" title="Add">Add</a></span>
